.datepicker
  display grid
  gap .5em 2em
  grid-template-columns 1fr 1fr
  
  button
    border none
    background none
    cursor pointer
    
  button
  span
    padding .7em
  
.dp-left
.dp-right
  display flex
  flex-direction column
  justify-content space-evenly
  height 100%
  
.dp-header
.dp-footer
  grid-column span 2
  
.dp-days
.dp-weekdays
  display grid
  grid-template-columns repeat(7, 1fr)
  
.dp-hours
  display grid
  grid-template-columns 1fr auto 1fr
  
.dp-day
  width 42px
  height @width
  
.dp-weekdays
  text-align center
  
.dp-months
  display grid
  grid-template-columns repeat(4, 1fr)
  
.dp-years
  text-align right
  font-size 1.4em
  
.dp-slide
  text-align center
